{% extends '@EasyAdmin/page/login.html.twig' %}

{% block page_title 'Connexion Administrateur' %}

{% block body %}
    <div class="login-wrapper">
        <h1 class="text-center">Se connecter</h1>

        {% if error %}
            <div class="alert alert-danger">Identifiants invalides.</div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="username">Email</label>
                <input type="email" name="_username" id="username" class="form-control" value="{{ last_username }}" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" required>
            </div>

            <div class="form-group">
                <input type="checkbox" id="remember_me" name="_remember_me">
                <label for="remember_me">Se souvenir de moi</label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Connexion</button>
        </form>

        <p class="text-center mt-3">
            <a href="#">Mot de passe oubli√© ?</a>
        </p>
    </div>
{% endblock %}
