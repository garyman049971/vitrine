<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Zen & Aroma{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('build/css/apropos.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/produits.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {# {% block importmap %}{{ importmap('app.css') }}{% endblock %} #}
        {% endblock %}
    </head>
    <body>




    {% block header %}
    <nav class="bg-info navbar navbar-expand-lg  container-fluid">
        <img class= "logo img-fluid"  src="{{ asset('build/img/logo-example.jpg') }}" style="width: 100px; height: 100px;" alt="logo">
        <div class="container-md">
            <a class="navbar-brand nav_a text-light" href="{{ path('app_accueil') }}">Accueil</a>
            <a class="navbar-brand nav_a text-light" href="{{ path('app_produits') }}">Nos Produits</a>
            <a class="navbar-brand nav_a text-light" href="{{ path('app_contact_new') }}">Contact</a>
            <a class="navbar-brand nav_a text-light" href="{{ path('app_apropos') }}">A propos</a>
        </div>
    </nav>
    {% endblock %}


        {% block body %}

        {% endblock %}



        {% block footer %}


    <footer class="bg-info text-light text-center py-3 mt-5 container_footer">
        <p>&copy; 2025 Zen & Aroma</p>
        <p>
            <a href="{{ path('app_contact_new') }}" class="text-light">Contactez-Nous</a> |
            <a href="{{ path('app_apropos') }}" class="text-light">A propos</a>
        </p>
    </footer>

        {% endblock %}


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
